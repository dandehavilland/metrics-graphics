{
  "framework": "qunit",

  "src_files": [
    "src/**/*.js",
    "tests/helpers.js",
    "tests/**/*_test.js"
  ],

  "serve_files": [
    "node_modules/jquery/dist/jquery.js",
    "node_modules/d3/d3.js",
    "tests/helpers.js",
    "dist/metricsgraphics.js",
    "tests/**/*_test.js"
  ],

  "before_tests": "gulp build:js",

  "launch_in_ci": [
    "PhantomJS"
  ],

  "launch_in_dev": [
    "PhantomJS",
    "Chrome"
  ],

  "phantomjs_debug_port": 9000
}
